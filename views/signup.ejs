<div class="d-flex justify-content-center align-items-center">
    <div class="card py-5 px-4" style="background: #ffffff1c !important;min-width: 400px;">
        <h2 class="login-title">Sign Up</h2>
        <form class="login-form" action="/signup" method="post">
            <div>
                <label for="name">Name </label>
                <input id="name" type="name" placeholder="Name" name="name" required />
            </div>
            <div>
                <label for="email">Email </label>
                <input id="email" type="email" placeholder="me@example.com" name="email" required />
            </div>

            <div>
                <label for="password">Password </label>
                <input id="password" type="password" placeholder="password" name="password" required />
            </div>

            <button class="btn btn--form" type="submit">
                Sign up
            </button>
            
            <p class="bg-danger border-2 border-top border-white position-relative my-2"><span class="p-1 position-absolute text-wrap fw-bold text-white" style="bottom: -15px;right: 155px;background: #885fc7;">OR</span></p>

            <a class="btn btn--form" href="/login">
                Log in
            </a>
        </form>
    </div>
</div>